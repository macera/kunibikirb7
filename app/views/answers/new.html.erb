<h1>「<%= @form.title %>」に回答する</h1>

<% if @model.errors.present? %>
  <% @model.errors.messages.each do |k, value| %>
    <% value.each do |v| %>
      <p><%= v %></p>
    <% end %>
  <% end %>
<% end %>

<%= form_for @model, url: admin_answers_path(@form.id) do |f| %>

  <% @form.form_items.each do |i| %>
    <p>
      <%= f.label "answer#{i.id}".to_sym, i.name %>
      <%= create_form_field(f, i) %>
    </p>
  <% end %>
  <%= f.submit 'ほぞん' %>
<% end %>